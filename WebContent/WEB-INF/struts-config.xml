<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<global-forwards>
        <forward name="login" path="/login.jsp" redirect="true"></forward>
	</global-forwards>

	<global-exceptions>
		<exception key="errors.detail"
		           type="java.lang.Exception"
		           path="/error1.jsp"/>
		<exception key="errors.detail"
		           type="jp.iosoft.exception.MyException"
		           path="/error.jsp"/>
		<exception key=""
		           type="jp.iosoft.exception.MyException2"
		           handler="jp.iosoft.handler.MyExceptionHandler"/>
	</global-exceptions>

    <form-beans>
        <form-bean
            name="loginForm"
            type="jp.iosoft.form.LoginForm"/>
        <form-bean
            name="uploadForm"
            type="jp.iosoft.form.UploadForm"/>
        <form-bean
            name="typeConvertForm"
            type="jp.iosoft.form.TypeConvertForm"/>
        <form-bean
            name="userForm"
            type="jp.iosoft.form.UserForm"/>
    </form-beans>

<!--         ctrl+alt+/ \ or ctrl+shift+C -->
    <action-mappings>
        <action
            path="/login"
            type="jp.iosoft.action.LoginAction"
            name="loginForm"
            scope="request"
            input="/login.jsp"
            validate="false">
            <forward name="success" path="/login_success.jsp"></forward>
        </action>
        <action
            path="/goAddUser"
            type="jp.iosoft.action.GoUserAction"
            validate="false">
            <forward name="success" path="/addUser.jsp"></forward>
        </action>
        <action
            path="/addUser"
            type="jp.iosoft.action.UserAction"
            name="userForm"
            scope="request"
            input="/addUser.jsp"
            validate="false">
            <forward name="success" path="/userList.jsp"></forward>
        </action>
        <action
            path="/MultForwardLogin"
            type="jp.iosoft.action.ForwardAction"
            validate="false">
            <forward name="success" path="/login.jsp"></forward>
         </action>
         <action
            path="/MultForwardLogin" forward="/login.jsp"
            validate="false">
        </action>
        <action
            path="/login_forward" forward="/login.jsp">
        </action>
        <action
            path="/testBeanwriteTag"
            type="jp.iosoft.action.BeanWriteAction"
            validate="false">

            <forward name="success" path="/bean_write.jsp"></forward>
        </action>
        <action
            path="/testLogicTag"
            type="jp.iosoft.action.LogicAction"
            validate="false">

            <forward name="success" path="/logic.jsp"></forward>
        </action>
        <action
            path="/testLogicIterateTag"
            type="jp.iosoft.action.LogicIterateAction"
            validate="false">

            <forward name="success" path="/logic_iterate.jsp"></forward>
        </action>
        <action
            path="/upload"
            type="jp.iosoft.action.UploadAction"
            name="uploadForm"
            scope="request"
            validate="false">
            <forward name="success" path="/upload_success.jsp"></forward>
        </action>
        <action
            path="/must_login"
            type="jp.iosoft.action.MustLoginAction"
            validate="false">
            <forward name="success" path="/must_login.jsp"></forward>
        </action>
        <action
            forward="/404.jsp"
            unknown="true">
        </action>
        <action
            path="/dyna_forward"
            type="jp.iosoft.action.DynaForwardAction"
            validate="false">
        </action>
        <action
            path="/type_convert"
            type="jp.iosoft.action.TypeConverterAction"
            name="typeConvertForm"
            scope="request"
            validate="false">
            <forward name="success" path="/converter_success.jsp"></forward>
        </action>
    </action-mappings>

    <message-resources parameter="resources.MessageResources" />

    <controller maxFileSize="10M"></controller>

    <plug-in className="jp.iosoft.plugin.UtilDateConverterPlugIn"/>

</struts-config>

